<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="bg-img">
    <div class="content">
      <header>Admin Registration</header>
      <form class="form" action="/signup" method="post">
        <div class="field">
          <span class="fa fa-user"></span>
          <input
            type="text"
            name="username"
            required
            placeholder="Enter Username"
          />
        </div>

        <div class="field">
          <span class="fa fa-user"></span>
          <input
            type="email"
            name="email"
            required
            placeholder="Enter Email Address"
          />
        </div>

        <div class="field">
          <span class="fa fa-user"></span>
          <input
            type="text"
            name="adminid"
            required
            placeholder="Enter ID #"
          />
        </div>

        <div class="field space">
          <span class="fa fa-lock"></span>
          <input
            type="password"
            name="pass"
            id="pass"
            class="pass-key"
            required
            placeholder="Password"
          />
          <span class="show">SHOW</span>
        </div>

        <div class="field space">
          <span class="fa fa-lock"></span>
          <input
            type="password"
            id="confirmpass"
            class="cpass-key"
            required
            placeholder="Confirm Password"
          />
          <span class="show2">SHOW</span>
        </div>

        <div class="field">
          <input type="submit" value="Register" />
        </div>
      </form>
    </div>
  </div>

  <script>
    const pass_field = document.querySelector(".pass-key");
    const pass_field2 = document.querySelector(".cpass-key");
    const pass = document.getElementById("pass");
    const cpass = document.getElementById("confirmpass");
    const submit = document.querySelector('input[type="submit"]');
    const showBtn = document.querySelectorAll(".show");
    const showBtn2 = document.querySelectorAll(".show2");

    submit.addEventListener("click", function (e) {
      if (pass.value !== cpass.value) {
        alert("Passwords do not match");
        e.preventDefault();
      }
    });

    showBtn.forEach((btn) => {
      btn.addEventListener("click", function () {
        if (pass_field.type === "password") {
          pass_field.type = "text";
          btn.textContent = "HIDE";
          btn.style.color = "#3498db";
        } else {
          pass_field.type = "password";
          btn.textContent = "SHOW";
          btn.style.color = "#222";
        }
      });
    });

    showBtn2.forEach((btn) => {
      btn.addEventListener("click", function () {
        if (pass_field2.type === "password") {
          pass_field2.type = "text"; // Changed from pass_field.type to pass_field2.type
          btn.textContent = "HIDE";
          btn.style.color = "#3498db";
        } else {
          pass_field2.type = "password";
          btn.textContent = "SHOW";
          btn.style.color = "#222";
        }
      });
    });
  </script>
</body>
</html>